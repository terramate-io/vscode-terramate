{
	"name": "terramate",
	"displayName": "Terramate",
	"publisher": "mineiros",
	"description": "VSCode Terramate Extension",
	"author": "Terramate",
	"icon": "assets/terramate.png",
	"license": "Apache",
	"version": "0.0.6",
	"repository": {
		"type": "git",
		"url": "https://github.com/terramate-io/vscode-terramate"
	},
	"categories": [
		"Programming Languages",
		"Other",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"devops",
		"terramate",
		"terraform",
		"hcl"
	],
	"engines": {
		"vscode": "^1.85.0"
	},
	"activationEvents": [
		"onLanguage:terramate"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "terramate",
				"extensions": [
					".tm",
					".tm.hcl",
					".tmgen"
				],
				"aliases": [
					"Terramate",
					"terramate",
					"tm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "terramate",
				"scopeName": "source.tm",
				"path": "./syntaxes/terramate.tmLanguage.json"
			}
		],
		"configuration": [
			{
				"title": "Language Server",
				"order": 1,
				"properties": {
					"terramate.languageServer.enabled": {
						"order": 0,
						"scope": "resource",
						"type": "boolean",
						"default": true,
						"description": "Enable/disable the Terramate language server"
					},
					"terramate.languageServer.binPath": {
						"order": 2,
						"scope": "resource",
						"type": "string",
						"default": "",
						"description": "Path to language server binary. If set, uses this instead of searching PATH. Works with any type setting."
					},
					"terramate.languageServer.args": {
						"order": 3,
						"scope": "resource",
						"type": "array",
						"default": [
							"-mode=stdio"
						],
						"description": "Arguments to pass to language server binary"
					},
					"terramate.languageServer.trace.server": {
						"order": 4,
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "off",
						"description": "Traces the communication between VS Code and the language server."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./src --ext .ts,.tsx",
		"test": "sh ./scripts/e2e.sh",
		"test:syntax": "sh ./scripts/e2e.sh --grep 'Syntax Recognition'",
		"test:core": "sh ./scripts/e2e.sh --grep 'Core LS'",
		"test:pro": "sh ./scripts/e2e.sh --grep 'Pro Features'",
		"version:patch": "npm version patch -m 'chore: bump version to %s'",
		"version:minor": "npm version minor -m 'chore: bump version to %s'",
		"version:major": "npm version major -m 'chore: bump version to %s'"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.9.1",
		"@types/vscode": "1.85.0",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.2",
		"eslint": "^9.38.0",
		"glob": "^11.0.3",
		"mocha": "^11.7.4",
		"ovsx": "^0.10.6",
		"semver": "^7.7.3",
		"typescript": "^5.9.3"
	}
}
