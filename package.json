{
	"name": "terramate",
	"displayName": "Mineiros Terramate",
	"publisher": "mineiros",
	"description": "VSCode Terramate Extension",
	"author": "Mineiros GmbH",
	"icon": "assets/terramate.png",
	"license": "Apache",
	"version": "0.0.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/mineiros-io/vscode-terramate"
	},
	"categories": [
		"Programming Languages",
		"Other",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"devops",
		"terramate",
		"terraform",
		"hcl"
	],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onLanguage:terramate"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "terramate",
				"extensions": [
					".tm",
					".tm.hcl"
				],
				"aliases": [
					"Terramate",
					"terramate",
					"tm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "terramate",
				"scopeName": "source.tm",
				"path": "./syntaxes/terramate.tmLanguage.json"
			}
		],
		"configuration": [
			{
				"title": "Language Server",
				"order": 1,
				"properties": {
					"terramate.languageServer.binPath": {
						"order": 1,
						"scope": "resource",
						"type": "string",
						"default": "",
						"description": "Path to language server binary (optional)"
					},
					"terramate.languageServer.args": {
						"order": 2,
						"scope": "resource",
						"type": "array",
						"default": [
							"-mode=stdio"
						],
						"description": "Arguments to pass to language server binary"
					},
					"terramate.languageServer.trace.server": {
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "verbose",
						"description": "Traces the communication between VS Code and the language server."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./src --ext .ts,.tsx"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.12.0",
		"mocha": "^9.2.1",
		"ovsx": "^0.5.0",
		"typescript": "^4.6.2",
		"vsce": "^2.9.1",
		"semver": "^7.3.7"
	}
}
